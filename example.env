# Discord application ID (Client ID)
DISCORD_APP_ID=

# Discord Client Secret (OAuth2 tab)
DISCORD_CLIENT_SECRET=

# Discord Bot Token (Bot tab)
DISCORD_TOKEN=

# Guild ID to route events (optional if single guild)
DISCORD_PRIMARY_GUILD_ID=

# Session secret for web dashboard
SESSION_SECRET=

# OAuth callback URL
# Example local: http://localhost:3000/auth/discord/callback
OAUTH_CALLBACK_URL=

# MySQL connection
# Option A: single URL (Railway variable reference: ${MySQL.MYSQL_URL})
#MYSQL_URL=

# Option B: separate fields (dev default matches docker-compose)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=sat
MYSQL_PASSWORD=sat
MYSQL_DATABASE=sat_bot

# Optional: override HTTP port
#PORT=3000
